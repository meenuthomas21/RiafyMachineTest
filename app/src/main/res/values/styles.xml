<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnError">@color/gray</item>
        <item name="colorError">@color/gray</item>


         <item name="android:actionMenuTextColor">@color/black</item>
        <item name="listPreferredItemHeightSmall">60dp</item>


        <item name="textInputStyle">@style/MyOutlinedBox</item>

    </style>
    <style name="MyOutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/selector_edittext_bordercolor</item>
        <item name="boxStrokeWidth">2px</item>
        <item name="boxStrokeWidthFocused">3px</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_5sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_5sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_5sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_5sdp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="editTextColor">@color/black</item>
        <item name="hintTextAppearance">@style/TextFloatLabelAppearance</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="counterTextAppearance">@style/TextAppearance.Design.Counter</item>
        <item name="counterOverflowTextAppearance">@style/TextAppearance.Design.Counter.Overflow
        </item>
    </style>
    <style name="TextFloatLabelAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>
    <style name="MyEditOutlinedBox" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <!-- EditText appearance here -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="hintTextColor">@color/gray</item>
    </style>
    <style name="InputLayotStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style></resources>